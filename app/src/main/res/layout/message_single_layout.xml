<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="5sp"
        android:src="@mipmap/ic_launcher_foreground" />


    <TextView
        android:id="@+id/message_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/circleImageView"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/circleImageView"
        android:background="@color/colorPrimary"
        android:padding="10sp"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/name_text_layout"
        android:layout_width="124dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/circleImageView"
        android:text="@string/display_Name"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/message_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_text_layout"
        android:layout_alignStart="@+id/message_text_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-63dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="62dp"
        android:layout_toEndOf="@+id/message_text_layout"
        android:padding="0dp"
        android:scaleType="centerCrop" />


</RelativeLayout>